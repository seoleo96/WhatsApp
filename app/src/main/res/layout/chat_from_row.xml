<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messages_chat_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/chat_from"
        android:maxWidth="240dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16sp"
        android:visibility="invisible"
        android:paddingRight="16sp"
        android:paddingBottom="28dp"
        android:text="TextViewjnfnvnvfvasasanjdsddssdsdsdsdsdsdsdsdssdsdbjbdbkksbvksjvkjdjvvksjbdksbjvjvksdkskjdvvkjdkjjjjjjjjjjjjkkkkkkkkksuhbvhubhbhbudfbuhvbuhbdbvuvsduvussdvubbvfhubvuhfbvbhduvhbfduhvsudbuhvbbuh"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_and_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_chat_to"
        android:padding="5dp"
        android:text="data and time"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messages_chat_from"
        app:layout_constraintTop_toTopOf="@+id/messages_chat_from"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:maxWidth="70dp"
        android:maxHeight="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/time_and_data"
        app:layout_constraintEnd_toEndOf="@+id/messages_chat_from"
        app:layout_constraintHeight_max="240dp"
        app:layout_constraintTop_toTopOf="@+id/messages_chat_from"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="300dp" />
</androidx.constraintlayout.widget.ConstraintLayout>