<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_new_message_chatTo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_color="@android:color/holo_orange_dark"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messages_chat_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/message_chat_to"
        android:maxWidth="240dp"
        android:visibility="invisible"
        android:padding="16dp"
        android:text="TextViewjnfnvnvfvnsuhbvhubhbhbudfbuhvbuhbdbvuvsduvussdvubbvfhubvuhfbvbhduvhbfduhvsudbuhvbbuh"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_new_message_chatTo"
        app:layout_constraintStart_toEndOf="@+id/profile_image_new_message_chatTo"
        app:layout_constraintTop_toTopOf="@+id/profile_image_new_message_chatTo" />

    <TextView
        android:id="@+id/data_and_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data and time"
        android:textSize="10sp"
        android:padding="9dp"
        android:background="@drawable/data_and_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/messages_chat_to"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/messages_chat_to"
        app:layout_constraintTop_toBottomOf="@+id/messages_chat_to"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image_view_to"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:maxWidth="300dp"
        android:maxHeight="450dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image_new_message_chatTo"
        app:layout_constraintStart_toEndOf="@+id/profile_image_new_message_chatTo"
        app:layout_constraintTop_toTopOf="@+id/profile_image_new_message_chatTo" />
</androidx.constraintlayout.widget.ConstraintLayout>